<%- include('../include/head.ejs') %>
    </head>

    <body>
        <%- include('../include/nav.ejs') %>

            <main>
                <% if (orders.length <=0 ){ %>
                    <h1>Nothing in Order!</h1>
                    <% } else{ %>
                        <ul>
                            <% orders.forEach(order=> {%>
                                <li>
                                    <h1># <%= order.id %>
                                    </h1>
                                    <ul>
                                        <% order.products.forEach(product=>{ %>
                                            <li>
                                                <%= product.title %> (<%= product.orderItem.quantity %>)
                                            </li>
                                            <% }); %>
                                    </ul>
                                </li>
                                <% }); %>
                        </ul>
                        <% } %>
            </main>
            <%- include('../include/end.ejs') %>