<%- include('../include/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">

    </head>

    <body>
        <%- include('../include/nav.ejs') %>

            <main>
                <form class="product-form" action="/admin/add-product" method="POST" autocomplete="off">
                    <div class="form-control">
                        <label for="title">Title</label>
                        <input type="text" name="title" id="title" placeholder="Type here">
                    </div>
                    <div class="form-control">
                        <label for="price">Price</label>
                        <input type="number" step="0.01" name="price" id="price" placeholder="without $ sign">
                    </div>
                    <div class="form-control">
                        <label for="image">Image URL</label>
                        <input type="text" name="imageURL" placeholder="url (http://...)">
                    </div>
                    <div class="form-control">
                        <label for="alt">alt</label>
                        <input type="text" name="alt" placeholder="alt">
                    </div>
                    <div class="form-control">
                        <label for="desc">Description</label>
                        <textarea rows="4" cols="50" name="desc" id="desc" placeholder="Type here!"></textarea>
                    </div>

                    <button type="submit">Add Product</button>
                </form>
            </main>
            <%- include('../include/end.ejs') %>