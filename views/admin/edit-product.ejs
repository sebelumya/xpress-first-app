<%- include('../include/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">

    </head>

    <body>
        <%- include('../include/nav.ejs') %>

            <main>
                <form class="product-form"
                    action="/admin/<% if (editing) { %>edit-product<% } else {%>add-product<%} %>" method="POST"
                    autocomplete="off">
                    <div class="form-control">
                        <label for="title">Title</label>
                        <input type="text" name="title" id="title" placeholder="Type here"
                            value="<% if (editing) { %><%= product.title %><% } %>">
                    </div>
                    <div class="form-control">
                        <label for="price">Price</label>
                        <input type="number" step="0.01" name="price" id="price" placeholder="without $ sign"
                            value="<% if (editing) { %><%= product.price %><% } %>">
                    </div>
                    <div class="form-control">
                        <label for="image">Image URL</label>
                        <input type="text" name="imageURL" placeholder="url (http://...)"
                            value="<% if (editing) { %><%= product.imageURL %><% } %>">
                    </div>
                    <div class="form-control">
                        <label for="alt">alt</label>
                        <input type="text" name="alt" placeholder="alt"
                            value="<% if (editing) { %><%= product.alt %><% } %>">
                    </div>
                    <div class="form-control">
                        <label for="desc">Description</label>
                        <textarea rows="4" cols="50" name="desc" id="desc"
                            placeholder="Type here!"><% if (editing) { %><%= product.description %><% } %></textarea>
                    </div>
                    <% if (editing) { %> <input type="hidden" value="<%= product._id %>" name="productId">
                        <% } %>

                            <button type="submit" class="btn">
                                <% if (editing) { %>Update Product<% } else{%>Add Product <% } %>
                            </button>
                </form>
            </main>
            <%- include('../include/end.ejs') %>